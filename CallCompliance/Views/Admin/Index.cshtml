
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <form>
        <div class="form-group row">
            <label class="col-sm-5 text-sm-right col-form-label">Admissions Daily Dial Cap</label>
            <div class="col-sm-1">
                <input type="text" class="form-control" value="7" maxlength="20">
            </div>
            <label class="col-sm-5 text-sm-right col-form-label">Other Daily Dial Cap</label>
            <div class="col-sm-1">
                <input type="text" class="form-control" value="6" maxlength="20">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-5 text-sm-right col-form-label">Admissions Daily Exceptions Dial Cap</label>
            <div class="col-sm-1">
                <input type="text" class="form-control" value="7" maxlength="20">
            </div>
            <label class="col-sm-5 text-sm-right col-form-label">Other Daily Exceptions Cap</label>
            <div class="col-sm-1">
                <input type="text" class="form-control" value="5" maxlength="20">
            </div>
        </div>
        
        <div class="form-inline row">
            <div class="align-middle">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary" data-bind="click: Uma.CoolDown.doSaveUnblock">Save</button>
                </div>
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary" data-bind="click: Uma.CoolDown.doReset">Reset</button>
                </div>
            </div>
        </div>

    </form>
</div>

