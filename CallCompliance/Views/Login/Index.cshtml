@using Newtonsoft.Json
@model CallCompliance.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<br />
<p><i>I need to authenticate you...</i></p>

<div class="container-fluid">
    <br />
    <div class="form-group row">
        <label class="col-sm-1 col-form-label">UserName</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" id="userName" data-bind="userName: UserName">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label">Password</label>
        <div class="col-sm-2">
            <input type="password" class="form-control" id="password" data-bind="password: Password">
        </div>
    </div>
    <div class="form-inline row">
        <label class="col-sm-1 col-form-label"></label>
        <div class="col-sm-1">
            <button type="submit" class="btn btn-primary" data-bind="click: Uma.Login.logIn">Login</button>
        </div>
        <div class="col-sm-1">
            <button type="submit" class="btn btn-primary">Cancel</button>
        </div>
    </div>
</div>

@section scripts {

    <script src="~/ViewScripts/Login/Login_ViewModel.js"></script>

    <script>
        $(function () {
            Uma.Login.serverModel = @Html.Raw(JsonConvert.SerializeObject(Model));
            Uma.Login.init();

            //$("#menu-home").addClass("active");
        })
    </script>
}

