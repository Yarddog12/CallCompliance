@using Newtonsoft.Json
@model CallCompliance.Models.ReportingModel

@{
    ViewBag.Title = "Reporting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <form>
        <div class="form-group row">
            <label class="col-sm-5 col-form-label">Report Type:</label>
            <div class="col-sm-3">
                <select class="custom-select col-sm-3 form-control" data-bind="options: ReportListNames, optionsText: 'ReportNames', optionsValue: 'Id', value: ReportingId, optionsCaption: 'Choose a Report...'"></select>
            </div>
        </div>
    </form>
</div>

<div class="form-inline row">

    <div class="col-sm-1">
        <button type="submit" class="btn btn-primary" data-bind="click: Uma.UnBlock.doSaveUnblock">Launch SSRS Report</button>
    </div>
</div>

@section scripts {

    <script src="~/ViewScripts/Reporting/Reporting_ViewModel.js"></script>

    <script>
        $(function () {
            Uma.Reporting.serverModel = @Html.Raw(JsonConvert.SerializeObject(Model));
            Uma.Reporting.init();

            $("#menu-reporting").addClass("active");
        })
    </script>
}




