@using Newtonsoft.Json
@model CallCompliance.Models.UnblockViewModel

@{
    ViewBag.Title = "Unblock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="unBlockcontainer">
    <form>
        <div class="form-group row">
            <label class="col-sm-5 col-form-label" for="inputEmail3">Enter phone number needing temporary override:</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="inputPhoneUnBlock" data-bind="value: model.PhoneNumber" placeholder="(000) 000-0000" maxlength="20">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-5 col-form-label" for="inlineFormCustomSelect">Reason for overriding daily dial limit cap:</label>
            <select class="custom-select col-sm-3" data-bind="value: selectedReasonId, options: reasonCollection, optionsText: 'country',
                       optionsCaption: 'Choose...'">
                
            </select>
        </div>
        <div class="form-inline row">
            <div class="col-sm-5">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optStudentName" value="option2">
                        Student name
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="optionsRadios" id="optEmployerName" value="option2">
                        Employer name
                    </label>
                </div>
            </div>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="inputPhoneUxnBlock" data-bind="value: model.NameAssigned" maxlength="100">
            </div>
        </div>
        <div class="form-group row"></div>
        <div class="form-group row">
            <label class="col-sm-5 col-form-label" for="inputEmail3">If Student, enter studentId</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="inputStudentId"  data-bind="value: model.StudentId" maxlength="100">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-5 col-form-label" for="inputEmail3">Include additional details (student name, system student number, business reason, etc...)</label>
            <div class="col-sm-3">
                <textarea type="text" class="form-control" id="txtAreaNotes" rows="3" data-bind="value: model.Notes" maxlength="500"></textarea>
            </div>
        </div>
        <div class="form-inline row">

            <div class="col-sm-1">
                <button type="submit" class="btn btn-primary" data-bind="click: doSaveUnblock">Save</button>
            </div>
            <div class="col-sm-1">
                <button type="submit" class="btn btn-primary" data-bind="click: doReset">Reset</button>
            </div>
        </div>

    </form>
</div>

